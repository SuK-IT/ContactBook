# Filename: myapp.kv
WindowManager:
    MyGrid:
    MySearch:


<MyGrid>:
    name: "main"

    m_Firstname: firstname  # Global variable name references the id firstname
    m_Surname: name  # Global variable name references the id name
    m_Mail: email  # Global variable email references the id email
    m_Telephone: telephone  # Global variable email references the id telephone
    m_Street: street  # Global variable street references the id street
    m_Required: required # Global variable Sternchen references the id required
    m_First_Req: firstreq 
    m_Sur_Req: surreq 
    m_Tel_Req: telreq
    



    GridLayout:
        cols:1
        

        Label:
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "y":0.1}
            #placeholder

        GridLayout:
            cols:2
            Label:
                id: firstreq
                
                text: "* Vorname: "

            TextInput:
                id: firstname
                write_tab: False
                multiline: False
                on_text_validate: root.btn()
                

            Label:
                id: surreq
                text: "* Name: "


            TextInput:
                id: name
                write_tab: False
                multiline: False
                on_text_validate: root.btn()
            

            Label:
                id: telreq
                text: "* Telefon: "

            TextInput:
                id: telephone
                write_tab: False
                multiline: False
                on_text_validate: root.btn()

            Label:
                text: "Email: "

            TextInput:
                id: email
                write_tab: False
                multiline: False
                on_text_validate: root.btn()

            

            Label:
                text: "Adresse: "

            TextInput:
                id: street
                write_tab: False
                multiline: False
                on_text_validate: root.btn()
        
            
        Label:
            id: required
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "y":0.1}
            text: "Die Felder mit * sind notwendig."
            color: (0,0,0,0)
            
             

        Button:
            text:"Speichern" #utf-8
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "y":0.1}
            on_press: root.btn()

        Button:
            text:"Kontaktsuche"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "y":0.1}
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "second"

<MySearch>:
    name: "second"
    
    m_Search: searchquery
    
    m_Result: searchresult

    GridLayout:
        cols:1

        Label:
            #placeholder

        TextInput:
            id: searchquery
            size_hint: 0.8, 0.4
            pos_hint: {"x":0.1, "y":0.1}
            write_tab: False
            multiline: False
            on_text_validate: root.search()
            on_text: root.update()
        DropDown:
            text: "DropDown"
            Label:
            
            

        
        Label:
            id: searchresult
        

        Button:
            size_hint: 0.8, 0.4
            pos_hint: {"x":0.1, "y":0.1}
            text: "Suche"
            on_press: root.search()



        Button:
            size_hint: 0.8, 0.4
            pos_hint: {"x":0.1, "y":0.1}
            text: "Kontakt einpflegen"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
        Label:
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "y":0.1}
            #placeholder
       

        
